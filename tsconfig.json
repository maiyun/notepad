{
    "compilerOptions": {
        "module": "CommonJS",
        "removeComments": true,
        "preserveConstEnums": true, // 保留 const 和 enum 声明
        // "outDir": "dist/",
        "sourceMap": false,
        "target": "ES2015",
        "strict": true,             // 严格模式
        "declaration": true,        // d.ts
        "declarationMap": false,    // d.ts 的 map
        "newLine": "LF",
        "paths": {
            "~/*": ["./*"]
        },
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}